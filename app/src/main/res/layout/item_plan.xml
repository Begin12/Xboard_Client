<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp"
    style="@style/IOSCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with name and badges -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/plan_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基础套餐"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popular_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门"
                    android:textSize="12sp"
                    android:textColor="@color/text_white"
                    android:background="@drawable/popular_badge_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/current_plan_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前"
                    android:textSize="12sp"
                    android:textColor="@color/primary_blue"
                    android:background="@drawable/current_plan_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Data amount -->
        <TextView
            android:id="@+id/plan_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100GB"
            android:textSize="32sp"
            android:textColor="@color/primary_blue"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="8dp" />

        <!-- Pricing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/plan_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥19.9/月"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/plan_original_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥29.9/月"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Features -->
        <TextView
            android:id="@+id/plan_features_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 100GB流量\n• 5个设备同时在线\n• 基础线路"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Action Button -->
        <Button
            android:id="@+id/action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择套餐"
            style="@style/IOSButton" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>