<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    
    <!-- 白色背景 -->
    <solid android:color="@color/text_white" />
    
    <!-- 3D效果边框 -->
    <stroke 
        android:width="1dp"
        android:color="#E5E5EA" />
    
    <!-- 内阴影效果 -->
    <gradient
        android:type="radial"
        android:gradientRadius="70dp"
        android:centerColor="@color/text_white"
        android:endColor="#F8F8F8"
        android:startColor="#FFFFFF" />
        
</shape>